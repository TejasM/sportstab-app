<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
	
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#67BA2A"
                android:endColor="#87DA4A"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#FF8864" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#67BA2A"
                android:startColor="#87DA4A"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#E3E8E2" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#67BA2A"
                android:startColor="#87DA4A"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#E3E8E2" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
